<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/signup_text_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="1.0" android:hint="name"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/signup_button_photo"/>
    <Button
            android:text="Select a photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/signup_button_photo" android:layout_marginEnd="161dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
            android:background="@drawable/profile_pic" android:textColor="@android:color/white"
            android:onClick="signupOnCliclk" android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.508"/>
    <Button
            android:text="Sign Up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button_signup" app:layout_constraintEnd_toEndOf="@+id/signup_text_password"
            app:layout_constraintStart_toStartOf="@+id/signup_text_password"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:background="@drawable/button"
            android:textColor="@android:color/white" android:inputType="text" android:onClick="signupOnCliclk"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/signup_text_email"
            app:layout_constraintEnd_toEndOf="@+id/signup_text_name"
            app:layout_constraintStart_toStartOf="@+id/signup_text_name" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_text_name" android:hint="email"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signup_text_password"
            app:layout_constraintEnd_toEndOf="@+id/signup_text_email" app:layout_constraintStart_toStartOf="@+id/signup_text_email"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/signup_text_email"
            android:hint="password"/>


</androidx.constraintlayout.widget.ConstraintLayout>