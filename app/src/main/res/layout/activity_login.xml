<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_text_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:hint="email" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_text_password" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/login_text_email"
            app:layout_constraintEnd_toEndOf="@+id/login_text_email" app:layout_constraintStart_toStartOf="@+id/login_text_email"
            android:hint="password"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button_login" android:layout_marginTop="98dp"
            app:layout_constraintTop_toBottomOf="@+id/login_text_password"
            app:layout_constraintEnd_toEndOf="@+id/login_text_password"
            app:layout_constraintStart_toStartOf="@+id/login_text_password" android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="1.0" android:inputType="text"
            android:background="@drawable/button" android:textColor="@android:color/white"
            android:onClick="login_button_onClick"/>
    <TextView
            android:text="don't have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/login_button_login"
            app:layout_constraintEnd_toEndOf="@+id/login_button_login"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintBottom_toTopOf="@+id/login_button_signup" android:layout_marginBottom="16dp"/>
    <Button
            android:text="Sign Up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button_signup"
            app:layout_constraintEnd_toEndOf="@+id/login_button_login"
            app:layout_constraintStart_toStartOf="@+id/login_button_login"
            android:inputType="textUri" android:background="@drawable/button" android:textColor="@android:color/white"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="login_button_onClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>