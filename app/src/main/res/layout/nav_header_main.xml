<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/gradiant"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:contentDescription="@string/nav_header_desc"
            android:background="@drawable/profiledefault"
            android:id="@+id/user_image_nav_header"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/user_name_nav_header"
            tools:text="Mohammed Hameed"
            android:textColor="@android:color/white" app:layout_constraintStart_toEndOf="@+id/user_image_nav_header"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/user_image_nav_header" android:layout_marginTop="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_bio_nav_header"
            android:textColor="@android:color/white"
            tools:text="Biograpgh"
            app:layout_constraintStart_toStartOf="@+id/user_image_nav_header" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/user_image_nav_header" android:onClick="nav_Header_onClick"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/addchannelbutton"
            android:id="@+id/imageButton"
            android:background="@android:color/transparent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="nav_Header_onClick"
            android:scaleType="fitXY" android:padding="5dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>
